{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@common/*": ["common/src/*"],
      "@events/*": ["events/src/*"],
      "@shared/*": ["shared/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
